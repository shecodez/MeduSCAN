section(flex layout-fill layout='row')
    md-content.authForm(layout='row',  layout-align='center-center', layout-padding, ng-cloak flex)
        md-card(flex, flex-gt-sm='50', flex-gt-md='33')
            md-toolbar
                .md-toolbar-tools
                    h2 {{vm.institution._id ? 'Edit Institution' : 'New Institution'}}

            md-card-content
                form(name='vm.form.institutionForm', ng-submit='vm.save(vm.form.institutionForm.$valid)', novalidate)
                    br
                    alert.text-center.text-danger(type='danger', ng-show='vm.error')
                        span(ng-bind='vm.error')

                    div(layout='row')
                        md-input-container(flex='50', flex-gt-sm='35')
                            label Institution Status
                            md-select(ng-model='vm.institution.active')
                                md-option(ng-repeat='opt in vm.statusOpts', ng-value='opt.value') {{opt.label}}

                    div(layout='row')
                        md-input-container.md-block(flex='75')
                            label Name
                            input(name='name', ng-model='vm.institution.name', required)
                            div(ng-messages='vm.form.institutionForm.name.$error', role='alert')
                                div(ng-message='required') Institution name is required.

                        md-input-container.md-block(flex='25')
                            label CEEB Code
                            input(name='ceebCode', ng-model='vm.institution.ceebCode')

                    div(layout='row', layout-xs='column')
                        div(flex='50')
                            md-input-container.md-block
                                label Phone
                                input(name='phone', ng-model='vm.institution.phone')
                        div(flex='50')
                            md-input-container.md-block
                                label Website
                                input(name='website', ng-model='vm.institution.website')

                    md-input-container.md-block
                        label Street
                        input(name='street', data-ng-model='vm.institution.address.street')

                    div(layout='row')
                        md-input-container.md-block(flex='33')
                            label City
                            input(name='city', data-ng-model='vm.institution.address.city')

                        md-input-container.md-block(flex='33')
                            label State
                            input(name='state', data-ng-model='vm.institution.address.state')

                        md-input-container.md-block(flex='33')
                            label Postal Code
                            input(name='zip', data-ng-model='vm.institution.address.zip')

                    br
                    div(layout='column')
                        md-button.md-raised.md-primary(type='submit') {{vm.institution._id ? 'Update' : 'Create'}}


