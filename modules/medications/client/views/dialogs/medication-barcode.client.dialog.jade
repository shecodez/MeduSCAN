md-dialog(aria-label='Print Barcode')
   md-content
      md-toolbar
         .md-toolbar-tools
            h2 Print Barcode
            span(flex='')
            md-button.md-icon-button(ng-click='cancel()', aria-label='Close dialog')
               md-icon.md-default-theme.material-icons close

      md-dialog-content
         .md-dialog-content
            section(print-section)
               .well(layout-padding)
                  .bg-white
                     .left(style='display: inline-block; margin: 0 10px;')
                        h3: io-barcode(code='{{medication._id}}', type='CODE128B', options='bcOpts')

                     .center(style='display: inline-block; margin: auto; bottom: 0; vertical-align: middle')
                        h4 {{medication.name}}
                           small: em  {{medication.type}}
                        p {{medication.amount}} : {{medication.strength}} {{medication.unit}} {{medication.form}} | {{medication.drugClass}}
                        p {{medication.description}}

                     .right(style='margin: 0 10px; float: right')
                        //h4 {{medication.pregnancyCategory}}
                        h4: small: em updated :&nbsp;
                           span(data-ng-bind="medication.updated | date:'mediumDate'")

      md-dialog-actions(layout='row')
         md-button(ng-click='ok()' print-btn) Print
         md-button(ng-click='cancel()') Cancel
