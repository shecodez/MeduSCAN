section.container
    .page-header
        h1 Tutorials

    .list-group
        //a.list-group-item(data-ng-repeat='tutorial in vm.tutorials')
            small: strong.text-uppercase {{tutorial.category}}
            h3: a(data-ui-sref='tutorials.view({ tutorialId: tutorial._id })') {{tutorial.title}}
            br
            p {{tutorial.content | limitTo: 512}}...
            br
            h5.text-muted
                span(data-ng-if='tutorial.user', data-ng-bind='tutorial.user.displayName')
                span(data-ng-if='!tutorial.user') Deleted User
                span.mr-5(data-ng-bind='tutorial.tags')
                |  |&nbsp;
                span.mr-5(data-ng-bind="tutorial.created | date:'short'")

            //md-button.md-raised.md-primary(data-ng-href='/#!/tutorials/{{tutorial._id}}') Learn More

