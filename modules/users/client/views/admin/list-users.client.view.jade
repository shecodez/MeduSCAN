section.container

    .page-header
        h1 Users

    md-input-container.md-block
        label Search...
        md-icon.fa(md-font-icon='fa-search', alt='search').fa-2x
        input(type='text', ng-model='search', ng-change='figureOutItemsToDisplay()')



    .list-group
        a.list-group-item(ng-repeat='user in pagedItems', ui-sref='admin.user({userId: user._id})')
            h4.list-group-item-heading(ng-bind='user.displayName')
            h5.text-center
                span.primary {{user.courses.length}}
                |  Course(s) Listed  / &nbsp;
                span.primary {{user.institutions.length}}
                |  Institution(s) Listed
            strong: p.list-group-item-text.pull-right.small(ng-bind='user.roles')
            p.list-group-item-text.primary(ng-bind='user.email')
    pagination(boundary-links='true', max-size='8', items-per-page='itemsPerPage', total-items='filterLength', ng-model='currentPage', ng-change='pageChanged()')
