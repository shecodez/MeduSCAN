section
    md-content(layout='row',  layout-align='space-around', layout-padding, ng-cloak)
        md-content(flex, flex-gt-sm='50', flex-gt-md='90')
            form(name='passwordForm', ng-submit='changeUserPassword(passwordForm.$valid)', novalidate='', autocomplete='off')
                br
                alert.text-center.text-success(ng-show='success')
                    strong Password Changed Successfully
                alert.text-center.text-danger(type='danger', ng-show='error')
                    strong(ng-bind='error')

                md-input-container.md-block
                    label Current Password
                    input(type='password', name='currentPassword', ng-model='passwordDetails.currentPassword', required)
                    div(ng-messages='passwordForm.currentPassword.$error', role='alert')
                        div(ng-message='required') Your current password is required.

                md-input-container.md-block
                    label New Password
                    input(type='password', name='newPassword', ng-model='passwordDetails.newPassword', popover='{{popoverMsg}}', popover-trigger='focus', password-validator='', required)
                    div(ng-messages='passwordForm.newPassword.$error', role='alert')
                        div(ng-message='required') Enter a new password.
                        div(ng-repeat='passwordError in passwordErrors')
                            div(ng-show='passwordForm.newPassword.$error.requirements') {{passwordError}}

                md-input-container.md-block
                    label Verify Password
                    input(type='password', name='verifyPassword', data-ng-model='passwordDetails.verifyPassword', password-verify='passwordDetails.newPassword', required)
                    div(ng-messages='passwordForm.verifyPassword.$error', role='alert')
                        div(ng-message='required') Verify your new password.
                        div(ng-show='passwordForm.verifyPassword.$error.passwordVerify') Passwords do not match.

                .form-group(ng-show='!passwordForm.newPassword.$error.required')
                    label Password Requirements
                    uib-progressbar(value='requirementsProgress', type='{{requirementsColor}}')
                        span(style='color:white; white-space:nowrap;') {{requirementsProgress}}%

                br
                md-button.md-raised.md-primary(type='submit') Save Password

//.col-xs-offset-1.col-xs-10.col-md-offset-4.col-md-4
   form.signin(name='passwordForm', ng-submit='changeUserPassword(passwordForm.$valid)', novalidate='', autocomplete='off')
      fieldset
         .form-group(show-errors='')
            label(for='currentPassword') Current Password
            input#currentPassword.form-control(type='password', name='currentPassword', ng-model='passwordDetails.currentPassword', placeholder='Current Password', required='')
            div(ng-messages='passwordForm.currentPassword.$error', role='alert')
               p.help-block.error-text(ng-message='required') Your current password is required.
         .form-group(show-errors='')
            label(for='newPassword') New Password
            input#newPassword.form-control(type='password', name='newPassword', ng-model='passwordDetails.newPassword', placeholder='New Password', popover='{{popoverMsg}}', popover-trigger='focus', password-validator='', required='')
            div(ng-messages='passwordForm.newPassword.$error', role='alert')
               p.help-block.error-text(ng-message='required') Enter a new password.
               div(ng-repeat='passwordError in passwordErrors')
                  p.help-block.error-text(ng-show='passwordForm.newPassword.$error.requirements') {{passwordError}}
         .form-group(show-errors='')
            label(for='verifyPassword') Verify Password
            input#verifyPassword.form-control(type='password', name='verifyPassword', ng-model='passwordDetails.verifyPassword', placeholder='Verify Password', password-verify='passwordDetails.newPassword', required='')
            div(ng-messages='passwordForm.verifyPassword.$error', role='alert')
               p.help-block.error-text(ng-message='required') Verify your new password.
               p.help-block.error-text(ng-show='passwordForm.verifyPassword.$error.passwordVerify') Passwords do not match.
         .form-group(ng-show='!passwordForm.newPassword.$error.required')
            label Password Requirements
            progressbar(value='requirementsProgress', type='{{requirementsColor}}')
               span(style='color:white; white-space:nowrap;') {{requirementsProgress}}%
         .text-center.form-group
            button.btn.btn-primary(type='submit') Save Password
         .text-center.text-success(ng-show='success')
            strong Password Changed Successfully
         .text-center.text-danger(ng-show='error')
            strong(ng-bind='error')
